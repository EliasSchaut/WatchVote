{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./server/",
  "testEnvironment": "node",
  "preset": "ts-jest",
  "testMatch": ["<rootDir>/**/*spec.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/tsconfig.json",
        "ignoreCodes": ["TS151001"]
      }
    ]
  },
  "collectCoverage": true
}